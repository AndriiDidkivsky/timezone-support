{
  "name": "timezone-support",
  "version": "0.0.1",
  "description": "Low-level time zone listing and date converting. Serves for adding time support to high-level date libraries.",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "url": "http://prantl.tk"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/timezone-support/blob/master/LICENSE"
    }
  ],
  "homepage": "https://github.com/prantlf/timezone-support#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/timezone-support.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/timezone-support/issues"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard --verbose",
    "compile": "rollup -c",
    "compile:debug": "rollup -c rollup.config-debug.js",
    "build": "npm run lint && npm run compile",
    "build:debug": "npm run lint && npm run compile:debug",
    "check": "jest --testPathIgnorePatterns \"browser.test.js\"",
    "check:debug": "jest --testPathIgnorePatterns \"browser.test.js\" --collectCoverage",
    "check:browser": "jest --testPathPattern browser.test.js",
    "test": "npm run lint && npm run check",
    "coverage": "npm run build:debug && npm run check:debug",
    "generate:browser-tests": "node util/generate-browser-tests",
    "all": "npm run lint && npm run compile:debug && npm run check:debug && npm run compile && npm run check && npm run generate:browser-tests && npm run check:browser"
  },
  "standard": {
    "ignore": [
      "dist",
      "src/lookup/data.js"
    ]
  },
  "files": [
    "dist"
  ],
  "jest": {
    "roots": [
      "test"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "connect": "^3.6.6",
    "fs-extra": "^7.0.0",
    "jasmine-core": "^3.2.1",
    "jest": "^23.5.0",
    "moment-timezone": "^0.5.21",
    "puppeteer": "^1.7.0",
    "rollup": "^0.65.0",
    "rollup-plugin-terser": "^1.0.1",
    "serve-static": "^1.13.2",
    "standard": "^11.0.1",
    "tiny-glob": "^0.2.2"
  },
  "keywords": [
    "timezone",
    "tzdata",
    "convert",
    "offset",
    "date",
    "time"
  ]
}
